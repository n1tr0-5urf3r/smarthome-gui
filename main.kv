<Control@Button>:
    font_size: 30
    background_color: (1,1,1,0.5)

<ControlIR@Button>:
    font_size: 20
    background_color: (1,1,1,0.5)

<Smarthome>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    tab_width: self.width / 5
    tab_height: 75

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "/var/www/html/bg.jpg"

    TabbedPanelItem:
        text: 'Stromsteuerung'
        font_size: 20

        GridLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "/var/www/html/bg.jpg"
            cols: 2
            spacing: 30, 30
            padding: 20, 20
            Control:
                text: 'LED an'
                on_release: app.sendPost('ledon')
            Control:
                text: 'LED aus'
                on_release: app.sendPost('ledoff')
            Control:
                text: 'TV an'
                on_release: app.sendPost('tvon')
            Control:
                text: 'TV aus'
                on_release: app.sendPost('tvoff')
            Control:
                text: 'PC an'
                on_release: app.sendPost('pcon')
            Control:
                text: 'PC aus'
                on_release: app.confirmdialog('PC Strom aus?', 'pcoff')
            Label:
                text:'Zimmertemperatur'
            Label:
                text: app.temperatur

    TabbedPanelItem:
        text: 'PC-Steuerung'
        font_size: 20
        BoxLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "/var/www/html/bg.jpg"
            orientation: 'vertical'
            spacing: 100, 100
            padding: 50, 50
            Control:
                text: 'WOL'
                font_size: 40
                on_release: app.sendPost('pcwake')
            Control:
                text: 'Shutdown'
                font_size: 40
                on_release: app.confirmdialog('PC wirklich\nherunterfahren?', 'pcshutdown')

    TabbedPanelItem:
        text: 'Temperatur'
        font_size: 20
        BoxLayout:
        AsyncImage:
            id: image
            nocache: True
            size: 800, 400
            size_hint: None, None
            source: '/var/www/html/wetter.png'

    TabbedPanelItem:
        text: 'Musik'
        font_size: 20
        BoxLayout:
        Image:
            size: 800, 400
            size_hint: None, None
            source: '/var/www/html/wetter.png'

    TabbedPanelItem:
        text: 'IR LED'
        font_size: 20
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "/var/www/html/bg.jpg"
            GridLayout:
                cols: 3
                size_hint: (0.4,0.7)
                font_size: 20
                ControlIR:
                    text: 'An'
                    on_release: app.sendPost('ledein')
                ControlIR:
                    text: 'Jump'
                    on_release: app.sendPost('ledjump7')
                ControlIR:
                    text: 'Fade'
                    on_release: app.sendPost('ledfade7')
                ControlIR:
                    text: 'R'
                    on_release: app.sendPost('ledred')
                ControlIR:
                    text: 'G'
                    on_release: app.sendPost('ledgreen')
                ControlIR:
                    text: 'B'
                    on_release: app.sendPost('ledblue')
                ControlIR:
                    text: 'Hell'
                    on_release: app.sendPost('ledheller')
                ControlIR:
                    text: 'Dunkel'
                    on_release: app.sendPost('leddunkler')
                ControlIR:
                    text: '>>>'
                    on_release: app.sendPost('ledfaster')
                ControlIR:
                    text: '>'
                    on_release: app.sendPost('ledslower')